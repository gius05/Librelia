@model PaginationModel

<div class="row mt-4 mb-5">
    <div class="col-md-12">
        <nav aria-label="Navigazione pagine">
            <ul class="pagination justify-content-center">
                <!-- Bottone Precedente -->
                <li class="page-item @(Model.IsPrevDisabled ? "disabled" : "")">
                    <a class="page-link" href="@(Model.IsPrevDisabled ? "#" : Model.GetPageUrl(Model.CurrentPage - 1))" tabindex="@(Model.IsPrevDisabled ? -1 : 0)" aria-disabled="@Model.IsPrevDisabled">
                        <i class="bi bi-chevron-left"></i> Precedente
                    </a>
                </li>

                <!-- Prima pagina e ... -->
                @if (Model.ShowFirstPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Model.GetPageUrl(1)">1</a>
                    </li>
                    @if (Model.PageNumbers.First() > 2)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                }

                <!-- Numeri di pagina -->
                @foreach (var pageNum in Model.PageNumbers)
                {
                    <li class="page-item @(pageNum == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Model.GetPageUrl(pageNum)">
                            @pageNum
                            @if (pageNum == Model.CurrentPage)
                            {
                                <span class="visually-hidden">(current)</span>
                            }
                        </a>
                    </li>
                }

                <!-- Ultima pagina e ... -->
                @if (Model.ShowLastPage)
                {
                    @if (Model.PageNumbers.Last() < Model.TotalPages - 1)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="@Model.GetPageUrl(Model.TotalPages)">@Model.TotalPages</a>
                    </li>
                }

                <!-- Bottone Successivo -->
                <li class="page-item @(Model.IsNextDisabled ? "disabled" : "")">
                    <a class="page-link" href="@(Model.IsNextDisabled ? "#" : Model.GetPageUrl(Model.CurrentPage + 1))" tabindex="@(Model.IsNextDisabled ? -1 : 0)" aria-disabled="@Model.IsNextDisabled">
                        Successiva <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
